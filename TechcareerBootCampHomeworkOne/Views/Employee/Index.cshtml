@model IEnumerable<Employee>

<h1>Employee List</h1>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Employee ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeId</td>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Title</td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary" asp-controller="Employee" asp-action="Orders" asp-route-id="@employee.EmployeeId">Siparişler</a>
                        <a class="btn btn-secondary" asp-controller="Employee" asp-action="Profile" asp-route-id="@employee.EmployeeId">Profilim</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
